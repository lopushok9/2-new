<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>What Bird Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet" />
    
    <!-- React CDN -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    
    <!-- TweetNaCl for signature verification -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tweetnacl/1.0.3/nacl.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tweetnacl-util/0.15.1/nacl-util.min.js"></script>
    
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', Arial, sans-serif;
            background: #fff;
            color: #1e293b;
            min-height: 100vh;
            display: flex;
            width: 100vw;
            height: 100vh;
        }
        .container {
            display: flex;
            min-height: 100vh;
            width: 100vw;
            background: #fff;
        }
        .left-panel {
            display: none;
            background: #fff;
            position: relative;
            overflow: hidden;
        }
        @media (min-width: 1024px) {
            .left-panel {
                display: flex;
                width: 50%;
                align-items: center;
                justify-content: center;
            }
        }
        @media (min-width: 1280px) {
            .left-panel {
                width: 60%;
            }
        }
        .left-bg {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, #f8fafc4d 0%, #d1fae54d 100%);
            z-index: 0;
        }
        .icon-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 4rem;
            z-index: 1;
        }
        .icon-box {
            width: 6rem;
            height: 6rem;
            background: #fff;
            border-radius: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px 0 #e2e8f0;
            border: 1px solid #f1f5f9;
            font-size: 2.5rem;
            transition: box-shadow 0.3s, transform 0.2s;
        }
        .icon-box:hover {
            box-shadow: 0 4px 16px 0 #cbd5e1;
            transform: translateY(-2px) scale(1.05);
        }
        .right-panel {
            width: 100%;
            min-height: 100vh;
            background: #fff;
            display: flex;
            flex-direction: column;
        }
        @media (min-width: 1024px) {
            .right-panel {
                width: 50%;
            }
        }
        @media (min-width: 1280px) {
            .right-panel {
                width: 40%;
            }
        }
        .content-center {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 4rem;
        }
        .form-box {
            width: 100%;
            max-width: 24rem;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }
        .header {
            text-align: center;
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }
        .logo {
            width: 3rem;
            height: 3rem;
            background: #0f172a;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            font-size: 1.5rem;
            color: #fff;
        }
        .title {
            font-size: 2rem;
            font-weight: bold;
            color: #0f172a;
            margin: 0;
        }
        .subtitle {
            color: #475569;
            margin: 0;
            font-size: 1rem;
        }
        .form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }
        .input {
            width: 100%;
            padding: 1rem;
            font-size: 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            background: #fff;
            color: #1e293b;
            transition: border 0.2s, box-shadow 0.2s;
        }
        .input:focus {
            outline: none;
            border-color: #0f172a;
            box-shadow: 0 0 0 2px #0f172a33;
        }
        .button {
            width: 100%;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 0.75rem;
            background: #0f172a;
            color: #fff;
            border: none;
            cursor: pointer;
            box-shadow: 0 1px 4px 0 #e2e8f0;
            transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
        }
        .button:disabled {
            background: #f1f5f9;
            color: #94a3b8;
            cursor: not-allowed;
            box-shadow: none;
        }
        .button:not(:disabled):hover {
            background: #1e293b;
            box-shadow: 0 2px 8px 0 #cbd5e1;
            transform: translateY(-2px);
        }
        .signin-link {
            text-align: center;
            font-size: 0.95rem;
            color: #64748b;
        }
        .signin-link a {
            color: #0f172a;
            text-decoration: underline;
            margin-left: 0.25rem;
            font-weight: 500;
            transition: color 0.2s;
        }
        .signin-link a:hover {
            color: #334155;
        }
        .footer {
            padding: 1.5rem 4rem;
            border-top: 1px solid #f1f5f9;
            text-align: center;
            font-size: 0.85rem;
            color: #94a3b8;
            background: #fff;
        }
        #message {
            text-align: center;
            margin-top: 1rem;
            color: #dc3545;
        }
        #name-group {
            display: none;
        }
        
        /* Solana Auth Container */
        #solana-auth-root {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <div class="left-bg"></div>
            <div class="icon-grid">
                <div class="icon-box">üê¶</div>
                <div class="icon-box">ü¶Ö</div>
                <div class="icon-box">ü¶â</div>
                <div class="icon-box">ü¶ú</div>
            </div>
        </div>
        <div class="right-panel">
            <div class="content-center">
                <div class="form-box">
                    <div class="header">
                        <div class="logo">üê¶</div>
                        <div>
                            <h1 class="title" id="form-title">Welcome to What Bird</h1>
                            <p class="subtitle" id="form-subtitle">Discover and identify birds with our AI-powered platform</p>
                        </div>
                    </div>
                    
                    <!-- Existing Email/Password Form -->
                    <form class="form" id="auth-form">
                        <input class="input" type="email" id="email" name="email" placeholder="Enter your email" required />
                        <input class="input" type="password" id="password" name="password" placeholder="Enter your password" required />
                        <div class="form-group" id="name-group">
                            <input class="input" type="text" id="name" name="name" placeholder="Enter your name" />
                        </div>
                        <button class="button" type="submit" id="submit-btn">Sign In</button>
                        <div class="signin-link" id="toggle-link">
                            Not registered? <a href="#" id="toggle-form">Sign Up</a>
                        </div>
                        <div id="message"></div>
                    </form>
                    
                    <!-- Solana Auth React Component Container -->
                    <div id="solana-auth-root"></div>
                </div>
            </div>
            <div class="footer">
                What Bird
            </div>
        </div>
    </div>

    <!-- Load bundled Solana Auth component -->
    <script src="/dist/solanaAuth.bundle.js"></script>
    <script>
        // Mount React component after DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM fully loaded, initializing auth script');

            // Mount Solana Auth Component
            const solanaAuthRoot = document.getElementById('solana-auth-root');
            if (solanaAuthRoot && window.SolanaAuth) {
                const root = ReactDOM.createRoot(solanaAuthRoot);
                root.render(React.createElement(window.SolanaAuth.default));
            }

            // Existing email/password auth logic (unchanged)
            const form = document.getElementById('auth-form');
            const toggleForm = document.getElementById('toggle-form');
            const formTitle = document.getElementById('form-title');
            const formSubtitle = document.getElementById('form-subtitle');
            const submitBtn = document.getElementById('submit-btn');
            const nameGroup = document.getElementById('name-group');
            const messageDiv = document.getElementById('message');
            const toggleLink = document.getElementById('toggle-link');

            if (!form || !toggleForm || !formTitle || !submitBtn || !nameGroup || !messageDiv || !toggleLink) {
                console.error('One or more elements not found:', {
                    form, toggleForm, formTitle, submitBtn, nameGroup, messageDiv, toggleLink
                });
                return;
            }

            let isSignUp = false;

            toggleForm.addEventListener('click', (e) => {
                e.preventDefault();
                isSignUp = !isSignUp;
                formTitle.textContent = isSignUp ? 'Create Account' : 'Welcome to What Bird';
                formSubtitle.textContent = isSignUp ? 'Join What Bird today' : 'Discover and identify birds with our AI-powered platform';
                submitBtn.textContent = isSignUp ? 'Sign Up' : 'Sign In';
                submitBtn.type = 'submit';
                submitBtn.classList.remove('link');
                nameGroup.style.display = isSignUp ? 'block' : 'none';
                document.getElementById('name').required = isSignUp;
                toggleLink.textContent = isSignUp ? 'Already have an account? ' : 'Not registered? ';
                toggleForm.textContent = isSignUp ? 'Sign In' : 'Sign Up';
                messageDiv.textContent = '';
                messageDiv.style.color = '#dc3545';
                form.reset();
                console.log('Toggled to:', isSignUp ? 'Sign Up' : 'Sign In');
            });

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                console.log('Form submit triggered, mode:', isSignUp ? 'Sign Up' : 'Sign In');

                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                const name = isSignUp ? document.getElementById('name').value : null;

                if (!email || !password) {
                    messageDiv.textContent = 'Please enter email and password';
                    return;
                }
                if (!/^\S+@\S+\.\S+$/.test(email)) {
                    messageDiv.textContent = 'Please enter a valid email address';
                    return;
                }
                if (isSignUp && !name) {
                    messageDiv.textContent = 'Please enter your name';
                    return;
                }

                const url = isSignUp ? '/api/signup' : '/api/signin';
                const body = isSignUp ? { email, password, name } : { email, password };

                console.log('Sending request to:', url, 'with body:', body);

                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(body),
                    });

                    console.log('Response status:', response.status);

                    const data = await response.json();
                    console.log('Response data:', data);

                    if (!response.ok) {
                        messageDiv.textContent = data.error || 'An error occurred';
                        submitBtn.type = 'submit';
                        submitBtn.classList.remove('link');
                        return;
                    }

                    messageDiv.textContent = data.message || 'Success!';
                    messageDiv.style.color = '#28a745';

                    if (data.access_token) {
                        localStorage.setItem('access_token', data.access_token);
                        alert('Logged in successfully! Token saved.');
                        if (!isSignUp) {
                            submitBtn.textContent = 'Go to Landing';
                            submitBtn.type = 'button';
                            submitBtn.classList.add('link');
                            submitBtn.onclick = () => {
                                console.log('Redirecting to /landing');
                                window.location.href = '/landing';
                            };
                        }
                    }

                    form.reset();
                } catch (error) {
                    messageDiv.textContent = 'Network error or server issue';
                    console.error('Error:', error);
                    submitBtn.type = 'submit';
                    submitBtn.classList.remove('link');
                }
            });

            submitBtn.addEventListener('click', (e) => {
                console.log('Button click triggered');
                if (form.checkValidity()) {
                    form.dispatchEvent(new Event('submit', { bubbles: true, cancelable: true }));
                } else {
                    console.log('Form invalid, validation issues:', {
                        email: document.getElementById('email').value,
                        password: document.getElementById('password').value.length > 0,
                        name: isSignUp ? document.getElementById('name').value : 'N/A'
                    });
                    messageDiv.textContent = 'Please fill all required fields correctly';
                }
            });

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø–µ—Ä–µ—Ö–æ–¥–∞ –Ω–∞ /profile —Å —Ç–æ–∫–µ–Ω–æ–º
            document.addEventListener('click', (e) => {
                if (e.target.tagName === 'A' && e.target.getAttribute('href') === '/profile') {
                    e.preventDefault();
                    const token = localStorage.getItem('access_token');
                    if (token) {
                        fetch('/profile', {
                            method: 'GET',
                            headers: {
                                'Authorization': `Bearer ${token}`
                            }
                        })
                        .then(response => {
                            if (!response.ok) throw new Error('Unauthorized');
                            return response.text();
                        })
                        .then(html => {
                            document.open();
                            document.write(html);
                            document.close();
                        })
                        .catch(err => {
                            console.error('Profile fetch error:', err);
                            window.location.href = '/auth';
                        });
                    } else {
                        window.location.href = '/auth';
                    }
                }
            });
        });
    </script>
</body>
</html>
