  <script>
    // Текстовая анимация
    window.addEventListener('load', function() {
      const title = document.querySelector('.hero-title');
      const subtitle = document.querySelector('.hero-subtitle');
      const button = document.querySelector('.cta-button');
      [title, subtitle, button].forEach(el => { el.style.opacity = '0'; el.style.transform = 'translateY(30px)'; });
      setTimeout(()=>{ title.style.transition='all 0.8s ease'; title.style.opacity='1'; title.style.transform='translateY(0)'; },100);
      setTimeout(()=>{ subtitle.style.transition='all 0.8s ease'; subtitle.style.opacity='1'; subtitle.style.transform='translateY(0)'; },300);
      setTimeout(()=>{ button.style.transition='all 0.8s ease'; button.style.opacity='1'; button.style.transform='translateY(0)'; },500);
    });

    // Слайдер
    const slider = document.querySelector('.slider');
    let slides = Array.from(document.querySelectorAll('.slide'));
    const isMobile = ('ontouchstart' in window) || window.innerWidth <= 768;
    const prefersReduced = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (isMobile || prefersReduced) {
      // Мобильный режим — fade
      slider.classList.add('mobile');
      slides.forEach((s,i)=>{ s.style.opacity = i===0 ? '1' : '0'; });
    } else {
      // Десктопный режим — 3D-анимация
      const OFFSET_X=30, OFFSET_Y=30, SCALE_STEP=0.06, ROT_Y_STEP=2, ROT_X_STEP=1, BLUR_STEP=2, OPACITY_STEP=0.08;
      const TRANSITION='transform 900ms cubic-bezier(.22,1,.36,1), opacity 900ms ease, filter 900ms ease';

      function applyStack() {
        slides.forEach((s,i)=>{
          s.style.transition=TRANSITION; s.style.zIndex=slides.length-i;
          if(i===0){ s.style.transform="translateX(0) translateY(0) scale(1)"; s.style.opacity="1"; s.style.filter="blur(0px)"; }
          else {
            const tx=-OFFSET_X*i, ty=-OFFSET_Y*i, sc=1-i*SCALE_STEP, ry=-ROT_Y_STEP*i, rx=ROT_X_STEP*i, bl=BLUR_STEP*i, op=Math.max(0,1-i*OPACITY_STEP);
            s.style.transform=`translateX(${tx}px) translateY(${ty}px) scale(${sc}) rotateY(${ry}deg) rotateX(${rx}deg)`;
            s.style.opacity=`${op}`; s.style.filter=`blur(${bl}px)`;
          }
        });
      }

      window.addEventListener('load', ()=>{ slides.forEach(s=>s.style.transition='none'); void slider.offsetWidth; applyStack(); });

      let isAnimating=false;
      function rotateSlides(){
        if(isAnimating) return; isAnimating=true;
        slides=Array.from(document.querySelectorAll('.slide'));
        const first=slides[0]; if(!first){isAnimating=false;return;}
        first.style.transition=TRANSITION;
        first.style.transform="translateZ(120px) translateX(20px) translateY(-20px) scale(1.06) rotateY(8deg) rotateX(-4deg)";
        first.style.opacity="0"; first.style.filter="blur(0px)";
        setTimeout(()=>{
          slider.appendChild(first);
          slides=Array.from(document.querySelectorAll('.slide'));
          const last=slides[slides.length-1];
          last.style.transition='none';
          const i=slides.length-1, tx=-OFFSET_X*i, ty=-OFFSET_Y*i, sc=1-i*SCALE_STEP, ry=-ROT_Y_STEP*i, rx=ROT_X_STEP*i, bl=BLUR_STEP*i;
          last.style.transform=`translateX(${tx}px) translateY(${ty}px) scale(${sc}) rotateY(${ry}deg) rotateX(${rx}deg)`;
          last.style.opacity='0'; last.style.filter=`blur(${bl}px)`;
          void last.offsetWidth;
          applyStack();
          setTimeout(()=>isAnimating=false,950);
        },920);
      }

      setInterval(rotateSlides,3000);
    }
  </script>
</body>
</html>
