    .nav-links { display: flex; gap: 30px; letter-spacing: 0.7px; }
    .nav-links a { color: white; text-decoration: none; font-size: 16px; font-weight: 400; font-family: "SF Pro Display"; transition: opacity 0.3s ease; }
    .nav-links a:hover { opacity: 0.8; }

    .main-content { display: flex; min-height: calc(100vh - 80px); align-items: center; }
    .left-section { flex: 1; padding: 60px 40px 60px 80px; display: flex; flex-direction: column; justify-content: center; }
    .right-section { flex: 1; height: calc(100vh - 80px); position: relative; display: flex; align-items: center; justify-content: center; }

    .hero-title {
      font-size: 4.5rem; font-weight: 700; color: #1a472a; line-height: 1.1; margin-bottom: 30px; letter-spacing: -0.02em;
