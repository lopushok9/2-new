      -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
    }
    .hero-subtitle { font-size: 1.25rem; color: #666; line-height: 1.6; margin-bottom: 40px; max-width: 500px; }
    .cta-button {
      background: linear-gradient(135deg, #1a472a 0%, #2d5a3d 100%); color: white; border: none;
      padding: 16px 32px; font-size: 1.1rem; font-weight: 500; border-radius: 12px;
      cursor: pointer; transition: all 0.3s ease; width: fit-content; box-shadow: 0 4px 15px rgba(26,71,42,0.2);
    }
    .cta-button:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(26,71,42,0.3); }
    .cta-button:active { transform: translateY(0); }

    /* --- Слайдер общие стили --- */
